<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--  ShowPoints -->
    <style name="textview_name_route_point">
    	<item name="android:textColor">@color/red</item>
    	<item name="android:typeface">sans</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:paddingLeft">5dp</item>   
    	<item name="android:textSize">15sp</item>
	</style>
	
	<style name="textview_street">
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:typeface">sans</item>
	    <item name="android:textStyle">italic</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@color/blue</item>
	    <item name="android:layout_height">25sp</item>
	</style>
	
	<style name="image">
	    <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:gravity">center</item>	    
	</style>
    
	<style name="textview_url">
	    <item name="android:typeface">sans</item>
	    <item name="android:textSize">12sp</item>
	   	<item name="android:paddingLeft">5dp</item> 
	   	<item name="android:paddingBottom">5dp</item>
	   	<item name="android:textColor">@color/yellow</item>
	   	<item name="android:textColorLink">@color/yellow</item>
	   	<item name="android:textStyle">normal</item>
	</style>
	
	<style name="textview_title">
	    <item name="android:gravity">center</item>
	    <item name="android:background">@drawable/background_listview</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:typeface">sans</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textColor">@color/black_blue</item>
	</style>
	
	<style name="button_map">
	    <item name="android:layout_width">40sp</item>
	    <item name="android:layout_height">40sp</item>
    	<item name="android:gravity">center</item>
    	<item name="android:background">@drawable/backgroun_button_map</item>
    	<item name="android:layout_marginRight">10dp</item>
	</style>
	
	<style name="button_comment">
	    <item name="android:layout_width">40sp</item>
	    <item name="android:layout_height">40sp</item>
    	<item name="android:gravity">center</item>
    	<item name="android:background">@drawable/background_button_comment</item>
    	<item name="android:layout_marginRight">10dp</item>
	</style>
	
</resources>
