<org.escoladeltreball.ulisesmap.model.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowRoutesActivity" >

    <CheckedTextView
        android:id="@+id/viewNameRoute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selectRoute"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ratingValue"
        android:layout_toRightOf="@+id/selectRoute"       
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"  />

    <ProgressBar
        android:id="@+id/placeHolderRoute"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/viewNameRoute"
        style="@style/image" />

    <ImageView
        android:id="@+id/imageRoute"
        style="@style/image" />

    <RatingBar
        android:id="@+id/ratingValue"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/viewDescriptionRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textview_street" />

</org.escoladeltreball.ulisesmap.model.CheckableLayout>